<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".DetailWhiteFormActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail White Form"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_edit_black_24dp"
                android:layout_toLeftOf="@+id/btn_print"
                android:layout_marginRight="10dp"
                android:enabled="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_print"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/btn_delete"
                android:background="@drawable/ic_file_download_black_50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_delete_black_50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:orientation="vertical">




        <TextView
            android:id="@+id/tv_titlenomorkontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Kontrol"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_nomorkontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1234DFGH"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bagian Mesin"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_bagianmesin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mesin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mesin"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_namamesin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mesin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Mesin"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_nomormesin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mesin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dipasang oleh"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_dipasangoleh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="user"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pemasangan"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_tglpasang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="22 Desember 2019"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="test deskripsi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gambar"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_duedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23 Desember 2019"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cara Penanggulangan"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tv_carapenanggulangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="testing"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>